<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view do Wizard -->
    <record id="view_nfe_import_wizard_form" model="ir.ui.view">
        <field name="name">nfe.import.wizard.form</field>
        <field name="model">nfe.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar XML NFe">
                <sheet>
                    <group>
                        <group>
                            <field name="xml_file" widget="binary" filename="xml_filename"/>
                            <field name="xml_filename" invisible="1"/>
                            <field name="import_type"/>
                        </group>
                        <group>
                            <field name="location_id" options="{'no_create': True}"/>
                            <field name="assigned_to"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_import_nfe"
                            type="object"
                            string="Importar"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action do Wizard -->
    <record id="action_nfe_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar XML NFe</field>
        <field name="res_model">nfe.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_nfe_import_wizard_form"/>
    </record>
</odoo>